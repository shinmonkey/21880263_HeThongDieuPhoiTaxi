<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DriverApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:material="clr-namespace:MauiIcons.Material;assembly=MauiIcons.Material"
    xmlns:local="clr-namespace:DriverApp">

    <TabBar>
        <ShellContent Title="Nhận Cuốc"
                      Icon="{material:Icon Icon=LocalTaxi}"
                      ContentTemplate="{DataTemplate local:MainPage}"
                      Route="MainPage" />
        <ShellContent Title="Tài khoản"
                      Icon="{material:Icon Icon=ManageAccounts}"
                      ContentTemplate="{DataTemplate local:Account}"
                      Route="Account" />
    </TabBar>

</Shell>

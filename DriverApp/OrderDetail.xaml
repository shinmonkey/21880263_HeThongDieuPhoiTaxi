<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:material="clr-namespace:MauiIcons.Material;assembly=MauiIcons.Material"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             xmlns:sensors="clr-namespace:Microsoft.Maui.Devices.Sensors;assembly=Microsoft.Maui.Essentials"
             x:Class="DriverApp.OrderDetail"
             Title="OrderDetail">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="10"
        VerticalOptions="Center">
        <Label Text="THÔNG TIN CUỐC XE" HorizontalOptions="Center" FontAttributes="Bold"/>
        <Label Text="Họ tên khách hàng"/>
        <Label Text="Hồ Tiên Sinh" x:Name="txtFullname"/>
        <Label Text="Số điện thoại:"/>
        <Label Text="0909090909" x:Name="txtPhone"/>
        <Label Text="Địa chỉ"/>
        <Label Text="227 Nguyễn Văn Cừ" x:Name="txtAddress"/>
        <maps:Map x:Name="map" HeightRequest="300" IsShowingUser="true"/>
        <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Spacing="30">
            <Button Text="Gọi khách hàng" />
            <Button Text="Huỷ Đơn" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>